<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBlueDark"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/idText"
        android:layout_width="248dp"
        android:layout_height="136dp"
        android:gravity="center"
        android:shadowColor="@color/colorBlueDark"
        android:shadowDy="5"
        android:singleLine="false"
        android:text="Not logged in!"
        android:textColor="#FFFFFF"
        android:textColorHighlight="@color/colorBlueLight"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.57"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.783" />

    <TextView
        android:id="@+id/welcomeText"
        android:layout_width="248dp"
        android:layout_height="136dp"
        android:gravity="center"
        android:shadowColor="@color/colorBlueDark"
        android:shadowDy="5"
        android:singleLine="false"
        android:text="What would you like to do today?"
        android:textColor="#FFFFFF"
        android:textColorHighlight="@color/colorBlueLight"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.092" />

    <ImageButton
        android:id="@+id/cookButton"
        style="@style/Widget.AppCompat.ImageButton"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="60dp"
        android:layout_marginLeft="60dp"
        android:background="#00673AB7"
        android:contentDescription="cook button"
        android:scaleType="centerCrop"
        android:tint="#FFF48F"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/restaurant_24px" />

    <ImageButton
        android:id="@+id/playButton"
        style="@style/Widget.AppCompat.ImageButton"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginEnd="60dp"
        android:layout_marginRight="60dp"
        android:background="#00673AB7"
        android:contentDescription="play button"
        android:scaleType="centerCrop"
        android:tint="#FFF48F"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/favorite_24px" />

    <Button
        android:id="@+id/signOutButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="79dp"
        android:background="@color/colorBlueLight"
        android:text="Sign Out"
        android:textColor="@color/colorYellowDark"
        app:layout_constraintStart_toStartOf="@+id/idText"
        app:layout_constraintTop_toBottomOf="@+id/idText" />

</androidx.constraintlayout.widget.ConstraintLayout>